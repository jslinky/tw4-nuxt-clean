{
  "format": "custom",
  "id": "card",
  "label": "Card",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "image": {
        "type": "Image",
        "config": {
          "label": "Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "tagline": {
        "type": "StructuredText",
        "config": {
          "label": "Tagline",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,strong,em,embed"
        }
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "",
          "allowTargetBlank": true,
          "single": "heading2,heading3,strong,em,embed"
        }
      },
      "title_type": {
        "type": "Select",
        "config": {
          "label": "Title Type",
          "placeholder": "",
          "options": ["2xl", "xl", "lg", "md", "sm", "xs", "xxs"]
        }
      },
      "sub_title": {
        "type": "StructuredText",
        "config": {
          "label": "Sub Title",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,heading3,heading4,strong,em,embed"
        }
      },
      "sub_title_size": {
        "type": "Select",
        "config": {
          "label": "Sub Title Size",
          "placeholder": "",
          "options": ["sm", "md", "lg", "xl"]
        }
      },
      "content": {
        "type": "StructuredText",
        "config": {
          "label": "Content",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item"
        }
      },
      "footer": {
        "type": "StructuredText",
        "config": {
          "label": "Footer",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,strong,em,hyperlink,image,embed"
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "button": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "Options": {
      "expand_to_full_width": {
        "type": "Boolean",
        "config": {
          "label": "Expand to Full Width",
          "default_value": false,
          "placeholder_true": "true",
          "placeholder_false": "false"
        }
      },
      "surface_background": {
        "type": "Select",
        "config": {
          "label": "Surface Background",
          "placeholder": "",
          "options": [
            "light",
            "dark",
            "eggshell",
            "primary",
            "primary-light",
            "primary-dark",
            "secondary",
            "secondary-light",
            "secondary-dark",
            "accent",
            "accent-light",
            "accent-dark"
          ]
        }
      },
      "overflow_clip": {
        "type": "Boolean",
        "config": {
          "label": "Overflow clip",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": true
        }
      },
      "class": {
        "type": "Text",
        "config": {
          "label": "Class",
          "placeholder": ""
        }
      }
    },
    "Image": {
      "column_image_ratio": {
        "type": "Select",
        "config": {
          "label": "Column Image Ratio",
          "placeholder": "",
          "options": [
            "square",
            "landscape",
            "portrait",
            "widescreen",
            "ultrawide",
            "golden"
          ]
        }
      },
      "row_image_ratio": {
        "type": "Select",
        "config": {
          "label": "Row Image Ratio",
          "placeholder": "",
          "options": [
            "square",
            "landscape",
            "portrait",
            "widescreen",
            "ultrawide",
            "golden"
          ]
        }
      }
    },
    "Layout": {
      "stacked_layout": {
        "type": "Boolean",
        "config": {
          "label": "Stacked Layout",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      },
      "column_layout": {
        "type": "Boolean",
        "config": {
          "label": "Column Layout",
          "default_value": false,
          "placeholder_true": "true",
          "placeholder_false": "false"
        }
      },
      "reverse_source_order": {
        "type": "Boolean",
        "config": {
          "label": "Reverse Source Order (Content + Picture) ",
          "default_value": false,
          "placeholder_true": "true",
          "placeholder_false": "false"
        }
      },
      "reverse_column_layout": {
        "type": "Boolean",
        "config": {
          "label": "Reverse Column Layout",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      },
      "reverse_row_layout": {
        "type": "Boolean",
        "config": {
          "label": "Reverse Row Layout",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      }
    },
    "Text Align": {
      "content_column_text_align": {
        "type": "Select",
        "config": {
          "label": "Content Column Text Align",
          "placeholder": "",
          "options": ["start", "center", "end"]
        }
      },
      "content_row_text_align": {
        "type": "Boolean",
        "config": {
          "label": "Content Row Text Align"
        }
      }
    },
    "Content Placement": {
      "justify_column_body_content": {
        "type": "Select",
        "config": {
          "label": "Justify Column Body Content",
          "placeholder": "",
          "options": ["start", "center", "end"]
        }
      },
      "justify_row_body_content": {
        "type": "Select",
        "config": {
          "label": "Justify Row Body Content",
          "placeholder": "",
          "options": ["start", "center", "end"]
        }
      },
      "align_column_body_content": {
        "type": "Select",
        "config": {
          "label": "Align Column Body Content",
          "placeholder": "",
          "options": ["start", "center", "end"]
        }
      },
      "align_row_body_content": {
        "type": "Select",
        "config": {
          "label": "Align Row Body Content",
          "placeholder": "",
          "options": ["start", "center", "end"]
        }
      }
    }
  }
}
